<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EditDokterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rel_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    >

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo3"
                        android:layout_marginStart="20dp"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/akreditasi"
                        android:layout_marginStart="60dp"/>

                </androidx.appcompat.widget.Toolbar>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_titlebed"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/rel_toolbar"
                android:layout_marginBottom="3dp"
                android:background="@color/colorPrimaryDark"
                >

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:gravity="center_horizontal"
                    android:text="Edit Data Dokter"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linAddDokter"
                android:layout_below="@id/rel_titlebed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/box_foto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_template"
                    android:layout_margin="8dp"
                    android:visibility="visible"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logobulet"/>
                    <LinearLayout
                        android:layout_below="@id/profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="4dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:layout_marginRight="8dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ganti foto"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/black"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/box_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_template"
                    android:layout_margin="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="8dp">

                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/nama_Dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="normal"
                            android:inputType="text"
                            android:hint="Nama Dokter"
                            android:fontFamily="@font/bookmanoldstyle"
                            android:textColor="@android:color/black"
                            android:visibility="visible"/>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/spesialistik_dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="normal"
                            android:inputType="text"
                            android:hint="Spesialistik"
                            android:fontFamily="@font/bookmanoldstyle"
                            android:textColor="@android:color/black"
                            android:visibility="visible"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hari Praktik"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/bookmanoldstyle"
                            />
                        <LinearLayout
                            android:id="@+id/lin_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/senin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Senin"
                                    android:fontFamily="@font/bookmanoldstyle"/>
                                <CheckBox
                                    android:id="@+id/selasa"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selasa"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                                <CheckBox
                                    android:id="@+id/rabu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rabu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                                <CheckBox
                                    android:id="@+id/kamis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kamis"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">
                                <CheckBox
                                    android:id="@+id/jumat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jumat"
                                    android:fontFamily="@font/bookmanoldstyle"/>
                                <CheckBox
                                    android:id="@+id/sabtu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sabtu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="3dp"/>
                                <CheckBox
                                    android:id="@+id/minggu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Minggu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="9dp"/>
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam Praktik"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/bookmanoldstyle"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/jam_praktik"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:met_floatingLabel="normal"
                                android:inputType="text"
                                android:hint="Dari Jam"
                                android:layout_weight="1"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/black"/>
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/jam_praktiksampai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:met_floatingLabel="normal"
                                android:inputType="text"
                                android:hint="Sampai Jam"
                                android:layout_weight="1"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lin_checkboxkedua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hari Praktik keDua"
                                android:textColor="@android:color/black"
                                android:fontFamily="@font/bookmanoldstyle"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <CheckBox
                                    android:id="@+id/seninkedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Senin"
                                    android:fontFamily="@font/bookmanoldstyle"/>
                                <CheckBox
                                    android:id="@+id/selasakedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selasa"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                                <CheckBox
                                    android:id="@+id/rabukedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rabu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                                <CheckBox
                                    android:id="@+id/kamiskedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kamis"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="8dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp">
                                <CheckBox
                                    android:id="@+id/jumatkedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jumat"
                                    android:fontFamily="@font/bookmanoldstyle"/>
                                <CheckBox
                                    android:id="@+id/sabtukedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sabtu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="3dp"/>
                                <CheckBox
                                    android:id="@+id/minggukedua"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Minggu"
                                    android:fontFamily="@font/bookmanoldstyle"
                                    android:layout_marginStart="9dp"/>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_jamkedua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jam Praktik"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/bookmanoldstyle"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/jam_praktikkedua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:met_floatingLabel="normal"
                                android:inputType="text"
                                android:hint="Dari Jam"
                                android:layout_weight="1"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/black"/>
                            <com.rengwuxian.materialedittext.MaterialEditText
                                android:id="@+id/jam_praktiksampaikedua"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:met_floatingLabel="normal"
                                android:inputType="text"
                                android:hint="Sampai Jam"
                                android:layout_weight="1"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linSpiner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Status Dokter"
                                android:textSize="16sp"
                                android:fontFamily="@font/bookmanoldstyle"
                                android:textColor="@android:color/black"
                                />
                            <Spinner
                                android:id="@+id/statusDokter"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:entries="@array/status"
                                />
                        </LinearLayout>
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/keterangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:met_floatingLabel="normal"
                            android:inputType="text"
                            android:hint="Keterangan"
                            android:fontFamily="@font/bookmanoldstyle"
                            android:textColor="@android:color/black"
                            android:visibility="visible"/>

                        <Button
                            android:id="@+id/btn_simpan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Simpan"/>


                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>