<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RincianKeluhanActivity">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/logo3"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/akreditasi"
                android:layout_marginStart="60dp"/>

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_titlebed"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_below="@id/rel_toolbar"
        android:layout_marginBottom="3dp"
        android:background="@color/colorPrimaryDark"
        >
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rincian Keluhan Pasien"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/bookmanoldstyle"
            android:textColor="@android:color/white"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_container"
        android:layout_below="@id/rel_titlebed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_template"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/box_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/dokter2"/>
                <TextView
                    android:id="@+id/rec_text_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yoga Wahyu Yuwono"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
            </LinearLayout>
            <View
                android:id="@+id/view_nama"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorGREY"
                android:layout_below="@id/box_nama"/>
            <LinearLayout
                android:id="@+id/box_tgl"
                android:layout_below="@id/view_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar"
                    />
                <TextView
                    android:id="@+id/rec_text_tgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28/04/2020"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
            </LinearLayout>
            <View
                android:id="@+id/view_tgl"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorGREY"
                android:layout_below="@id/box_tgl"/>
            <LinearLayout
                android:id="@+id/box_kategori"
                android:layout_below="@id/view_tgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icons8newticket96"
                    />
                <TextView
                    android:id="@+id/rec_text_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengaduan Keluhan"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
            </LinearLayout>
            <View
                android:id="@+id/view_kategori"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorGREY"
                android:layout_below="@id/box_kategori"/>
            <LinearLayout
                android:id="@+id/box_unit"
                android:layout_below="@id/view_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icons8info80"
                    />
                <TextView
                    android:id="@+id/rec_text_unit"
                    android:layout_below="@id/rec_text_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IGD"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
            </LinearLayout>
            <View
                android:id="@+id/view_unit"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorGREY"
                android:layout_below="@id/box_unit"/>
            <TextView
                android:id="@+id/title_text_keluhan"
                android:layout_below="@id/view_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluhan"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bookmanoldstyle"
                />
            <LinearLayout
                android:id="@+id/lin_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/title_text_keluhan"
                android:background="@drawable/bg_template">
                <TextView
                    android:id="@+id/rec_text_keluhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disini Ada keluhan yaa"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/title_text_balasan"
                android:layout_below="@id/lin_keluhan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balasan"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/bookmanoldstyle"
                />
            <LinearLayout
                android:id="@+id/lin_balasan"
                android:layout_below="@id/title_text_balasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_template">
                <TextView
                    android:id="@+id/rec_text_balasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disini Ada keluhan yaa"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"
                    />
            </LinearLayout>



        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_balas"
        android:layout_below="@id/rel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Balas Keluhan"
        android:textStyle="bold"
        android:fontFamily="@font/bookmanoldstyle"
        android:background="#4CAF50"/>

</RelativeLayout>