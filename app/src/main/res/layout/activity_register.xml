<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                >

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:src="@drawable/logo3"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/akreditasi"
                    android:layout_marginStart="60dp"/>

            </androidx.appcompat.widget.Toolbar>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginTop="100dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Admin"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/bookmanoldstyle"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_templatewhite"
                android:padding="16dp"
                android:layout_marginTop="20dp">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:met_floatingLabel="normal"
                    android:inputType="text"
                    android:hint="Username"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/namaLengkap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:met_floatingLabel="normal"
                    android:inputType="text"
                    android:hint="Nama Lengkap"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:met_floatingLabel="normal"
                    android:inputType="text"
                    android:hint="Password"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/bookmanoldstyle"/>
                <LinearLayout
                    android:id="@+id/lin_bagian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bagian"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/bookmanoldstyle"
                        android:textSize="16sp"/>
                    <RadioGroup
                        android:id="@+id/radGroupBagian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radioBtnBidyan"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Bidyan"/>
                        <RadioButton
                            android:id="@+id/radioBtnSupir"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Supir"/>
                        <RadioButton
                            android:id="@+id/radioBtnIp2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="IP2"/>
                    </RadioGroup>


                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar"
                    android:id="@+id/btnDaftar"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:fontFamily="@font/bookmanoldstyle"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>